<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_contents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Fragment.PrizeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTran"
            android:src="@mipmap/vote_left_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:background="@color/colorTran"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/calender_blue_btn"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/vote_dateTv"
                    style="@style/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.10.27" />

                <ImageButton
                    android:id="@+id/vote_calenderBtn"
                    android:background="@color/colorTran"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/calender_blue_btn" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorTran"
            android:src="@mipmap/vote_right_btn" />
    </RelativeLayout>

    <TextView
        style="@style/main_bit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="오늘의 질문" />

    <TextView
        android:id="@+id/vote_questionTv"
        style="@style/main_small_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="질문" />


    <RadioGroup
        android:id="@+id/vote_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/vote_radio1"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:background="@drawable/radio_selector"
            android:buttonTint="@color/colorTran"
            android:text="돈가스" />

        <RadioButton
            android:id="@+id/vote_radio2"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:buttonTint="@color/colorTran"
            android:text="파스타" />

        <RadioButton
            android:id="@+id/vote_radio3"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:buttonTint="@color/colorTran"
            android:text="햄버거" />

        <RadioButton
            android:id="@+id/vote_radio4"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:buttonTint="@color/colorTran"
            android:text="떡볶이" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/vote_voteBtn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@mipmap/vote_logout_btn" />
</LinearLayout>
