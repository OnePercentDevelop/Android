<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 시간 레이아웃 -->
            <LinearLayout
                android:background="@drawable/time_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@mipmap/clock" />

                    <TextView
                        style="@style/main_title"
                        android:text="오늘의 상품" />

                </LinearLayout>

                <TextView
                    android:id="@+id/main_gifticonTv"
                    style="@style/main_small"
                    android:layout_marginBottom="20dp"
                    android:text="" />


                <TextView
                    android:id="@+id/main_clockTv"
                    style="@style/main_clock"
                    android:layout_marginBottom="20dp"
                    android:text="07:40:32" />


                <TextView
                    android:id="@+id/main_voterCountTv"
                    style="@style/main_vote"
                    android:text="" />

                <TextView
                    style="@style/main_small"
                    android:text="참가자 수" />

            </LinearLayout>

            <!-- 오늘의 질문 레이아웃 -->
            <LinearLayout
                android:background="@drawable/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="2dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    style="@style/main_title"
                    android:layout_weight="2"
                    android:gravity="bottom"
                    android:text="오늘의 질문" />

                <TextView
                    style="@style/main_small"
                    android:layout_weight="1.20"
                    android:id="@+id/main_questionTv"
                    android:text="" />


                <LinearLayout
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:id="@+id/main_exampleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </LinearLayout>


            <!-- 당첨자 레이아웃  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bottom_line"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fanfare_left" />

                    <TextView
                        style="@style/main_title"
                        android:text="지난주 당첨자" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fanfare_right" />

                </LinearLayout>

                <TextView
                    android:id="@+id/main_beforePrizeTv"
                    style="@style/main_title"
                    android:text="" />
                <TextView
                    style="@style/main_small"
                    android:layout_marginBottom="20dp"
                    android:text="당첨되신 여러분들 진심으로 축하드립니다" />

                <ImageView
                    android:src="@mipmap/prize_decoration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
